<?xml version="1.0"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark" xmlns:main="de.dittner.testmyself.ui.view.main.*"
               frameRate="30"
               usePreloader="true"
               preloader="de.dittner.testmyself.ui.common.preloader.AppPreloader"
               backgroundColor="0x3d3f4b"
               uncaughtError="uncaughtErrorHandler(event)"
               addedToStage="addedToStageHandler(event)">

    <fx:Script><![CDATA[
        import de.dittner.testmyself.model.AppModel;
        import de.dittner.testmyself.ui.common.utils.TextFieldFactory;

        import mx.logging.Log;

        public static var root:TestMyselfApp;
        public static var appModel:AppModel;

        private function uncaughtErrorHandler(event:UncaughtErrorEvent):void {
            var error:* = event.error;
            if (error is Error) {
                Log.getLogger("UnchaughtErrors").error((error as Error).getStackTrace().toString());
            }
            else {
                Log.getLogger("UnchaughtErrors").error(error ? error.toString() : "unknown error");
            }
        }

        private function addedToStageHandler(event:Event):void {
            TestMyselfApp.root = this;
            TextFieldFactory.useEmbedFonts = true;
            if (!appModel) {
                appModel = new AppModel();
                appModel.init();
            }
            if (!mainView.isActive) mainView.activate();
        }
        ]]></fx:Script>

    <!--<fx:Style source="/TestMyselfMobileStyle.css"/>-->
    <fx:Style source="/TestMyselfStyle.css"/>

    <main:MainView id="mainView"
                   width="100%" height="100%"/>

</s:Application>
