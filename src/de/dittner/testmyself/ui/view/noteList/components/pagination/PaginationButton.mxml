<?xml version="1.0"?>
<s:Button xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        [Style(name="image", type="Object")]
    </fx:Metadata>

    <fx:Declarations>

        <fx:Component className="IconButtonSkin">

            <s:SparkSkin alpha="1" alpha.disabled="0.5">

                <fx:Metadata>
                    [HostComponent("spark.components.Button")]
                </fx:Metadata>

                <s:states>
                    <s:State name="disabled"/>
                    <s:State name="down"/>
                    <s:State name="over"/>
                    <s:State name="up"/>
                </s:states>

                <s:BitmapImage verticalCenter="0" horizontalCenter="0"
                               alpha.up=".75"
                               alpha.disabled=".5"
                               alpha.over="1"
                               alpha.down="1"
                               source="{getStyle('image')}"/>

                <s:Label id="labelDisplay"
                         textAlign="center"
                         fontFamily="{FontName.MYRIAD_COND}"
                         fontWeight="bold"
                         fontSize="15"
                         maxDisplayedLines="1" mouseChildren="false" mouseEnabled="false"
                         horizontalCenter="0" verticalCenter="0" verticalAlign="middle"
                         left="5" right="5" top="2" bottom="1"/>
                <s:Rect width="100%" height="100%">
                    <s:fill>
                        <s:SolidColor alpha="0"/>
                    </s:fill>
                </s:Rect>

                <fx:Script><![CDATA[
                    import de.dittner.testmyself.ui.common.utils.FontName;
                    ]]></fx:Script>
            </s:SparkSkin>

        </fx:Component>

    </fx:Declarations>

    <s:skinClass>{IconButtonSkin}</s:skinClass>

</s:Button>
