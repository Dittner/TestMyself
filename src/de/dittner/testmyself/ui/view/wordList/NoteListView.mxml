<?xml version="1.0"?>
<view:SmartView xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                xmlns:core="de.dittner.testmyself.ui.common.view.*"
                xmlns:list="de.dittner.testmyself.ui.view.vocabulary.note.list.*"
                xmlns:toolbar="de.dittner.testmyself.ui.view.vocabulary.note.toolbar.*"
                xmlns:mp3="de.dittner.testmyself.ui.common.audio.mp3.*"
                xmlns:navigation="de.dittner.testmyself.ui.common.pagination.*"
                xmlns:utils="de.dittner.testmyself.ui.common.utils.*"
                xmlns:form="de.dittner.testmyself.ui.view.vocabulary.note.form.*"
                xmlns:filter2="de.dittner.testmyself.ui.view.vocabulary.note.filter.*"
                xmlns:search="de.dittner.testmyself.ui.view.vocabulary.note.search.*"
                xmlns:view="de.dittner.testmyself.ui.common.view.*"
                horizontalCenter="0"
                currentState="inactive">

    <fx:Script><![CDATA[
        import de.dittner.testmyself.model.domain.vocabulary.VocabularyID;
        import de.dittner.testmyself.ui.common.utils.AppColors;
        import de.dittner.testmyself.ui.common.utils.AppSizes;
        import de.dittner.testmyself.ui.common.utils.FontName;
        import de.dittner.testmyself.ui.common.view.ViewModelFactory;

        [Bindable]
        public var vm:WordListVM;

        //--------------------------------------
        //  editing
        //--------------------------------------
        private var _editing:Boolean = false;
        [Bindable("editingChanged")]
        public function get editing():Boolean {return _editing;}
        public function set editing(value:Boolean):void {
            if (_editing != value) {
                _editing = value;
                dispatchEvent(new Event("editingChanged"));
            }
        }

        //----------------------------------------------------------------------------------------------
        //
        //  Methods
        //
        //----------------------------------------------------------------------------------------------

        override protected function activate():void {
            vm = ViewModelFactory.instance.wordListVM;
            vm.viewActivated();

            switch (vm.selectedVocabulary.id) {
                case VocabularyID.DE_WORD :
                    setCurrentState("word");
                    break;
                case VocabularyID.DE_VERB :
                    setCurrentState("verb");
                    break;
                default :
                    throw Error("Unknown vocabulary: " + vm.selectedVocabulary.id);
            }
        }

        public function deactivate():void {
            editing = false;
            mp3Player.visible = false;
            setCurrentState("inactive");
        }

        public function showEditor():void {
            editing = true;
        }

        public function hideEditor():void {
            editing = false;
        }

        override protected function updateDisplayList(w:Number, h:Number):void {
            super.updateDisplayList(w, h);
            if (form) {
                form.width = Math.min(w, AppSizes.EDITOR_MAX_WIDTH);
                form.x = w - form.width;
            }
        }
        ]]></fx:Script>

    <core:states>
        <s:State name="disabled"/>
        <s:State name="inactive"/>
        <s:State name="word"/>
        <s:State name="verb"/>
    </core:states>

    <!--content bg-->
    <s:Rect width="100%" height="100%">
        <s:fill>
            <s:BitmapFill source="@Embed(source='/assets/screen/screen_bg_pattern.png')"
                          fillMode="repeat"/>
        </s:fill>
    </s:Rect>

    <utils:BG excludeFrom="inactive" width="100%" height="100%" color="#ffFFff"/>

    <!--header bg-->
    <s:Rect width="100%" height="{HEADER_HEI}">
        <s:fill>
            <s:SolidColor color="{AppColors.SCREEN_HEADER_BG}"/>
        </s:fill>
    </s:Rect>

    <s:HGroup width="100%" height="{HEADER_HEI}"
              verticalAlign="middle"
              paddingLeft="{PADDING}">

        <s:Label text="{info.title}"
                 fontFamily="{FontName.MYRIAD}"
                 fontSize="18"
                 paddingTop="2"
                 width="100%"
                 color="#54545d"/>

        <toolbar:NoteToolbar id="toolbar"
                             excludeFrom="inactive"
                             width="100%"
                             height="{HEADER_HEI}"
                             verLayoutToolEnabled.verb="false"
                             hideDetailsToolEnabled.verb="false"
                             transInvertToolEnabled.verb="false"/>
    </s:HGroup>

    <s:HGroup left="-1" right="-1" top="{HEADER_HEI - 1}" bottom="{FOOTER_HEI}" gap="-1">
        <s:Scroller width="100%" height="100%"
                    excludeFrom="inactive"
                    minViewportInset="1"
                    horizontalScrollPolicy="off"
                    hasFocusableChildren="false">
            <list:NoteList id="list"
                           width="100%"
                           contentBackgroundAlpha="0"
                           deselectEnabled="true"
                           itemRenderer="de.dittner.testmyself.ui.view.vocabulary.note.list.NoteRenderer"
                           itemRenderer.word="de.dittner.testmyself.ui.view.vocabulary.word.list.WordRenderer"
                           itemRenderer.verb="de.dittner.testmyself.ui.view.vocabulary.verb.list.VerbRenderer">
                <list:layout>
                    <s:VerticalLayout gap="0" useVirtualLayout="true"/>
                </list:layout>
            </list:NoteList>
        </s:Scroller>

        <list:ExampleList id="exampleList"
                          width="100%" height="100%"
                          excludeFrom="inactive"
                          showTitle="false"
                          hasFocusableChildren="false"/>
    </s:HGroup>

    <!--footer-->
    <s:Group width="100%" height="{FOOTER_HEI}" bottom="0"
             excludeFrom="inactive">
        <s:Rect width="100%" bottom="0" height="100%">
            <s:fill>
                <s:SolidColor color="{AppColors.SCREEN_HEADER_BG}"/>
            </s:fill>
        </s:Rect>

        <mp3:MP3Player id="mp3Player"
                       width="400"
                       left="{PADDING - 10}"
                       verticalCenter="0"
                       removeRecordEnabled="false"
                       visible="false"
                       skinClass="de.dittner.testmyself.ui.common.audio.skins.MP3PlayerSkin"/>

        <navigation:PaginationBar id="paginationBar"
                                  left="{PADDING}" right="{PADDING}"
                                  height="100%"/>

    </s:Group>

    <s:Group width="100%" height="100%"
             excludeFrom="inactive"
             visible="{editing}"
             mouseEnabled="{editing}">
        <s:Rect width="100%" height="100%">
            <s:fill>
                <s:SolidColor color="{AppColors.EDITOR_SHADOW}" alpha=".5"/>
            </s:fill>
        </s:Rect>

        <form:NoteForm id="form"
                       visible="false"
                       bottom="0"
                       top="{HEADER_HEI}"/>

        <filter2:ThemeFilter id="filter"
                             width="350"
                             visible="false"
                             right="0"
                             bottom="0"
                             top="{HEADER_HEI}"/>

        <search:SearchFilter id="searchFilter"
                             width="100%" height="170"
                             visible="false"
                             top="{HEADER_HEI}"/>
    </s:Group>

    <s:BitmapImage width="100%"
                   top="{HEADER_HEI}"
                   smooth="true"
                   source="@Embed(source='/assets/shadow.png', scaleGridLeft='5', scaleGridRight='6', scaleGridTop='3', scaleGridBottom='4')"/>

</view:SmartView>
