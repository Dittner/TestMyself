<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             xmlns:tile="de.dittner.testmyself.ui.common.tile.*"
             alpha.disabled="0.5" minHeight="{Values.PT30}" minWidth="{Values.PT120}">

    <fx:Metadata>
    <![CDATA[
        [HostComponent("de.dittner.testmyself.ui.common.spinner.CustomSpinner")]
        ]]>
    </fx:Metadata>
    <fx:Script><![CDATA[
        import de.dittner.testmyself.ui.common.tile.TileID;
        import de.dittner.testmyself.utils.Values;
        ]]></fx:Script>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>

    <tile:TileImage width="{Values.PT52}" height="100%"
                    actualTileID="{TileID.WHITE_BG_ICON}"
                    use9Scale="true"/>

    <s:Label text="{hostComponent.value.toString()}"
             fontSize="{Values.PT18}"
             left="0" width="{Values.PT50}" top="0" bottom="0" verticalAlign="middle"
             textAlign="right" verticalCenter="0" maxDisplayedLines="1"/>

    <tile:FadeTileButton id="incrementButton"
                         left="{Values.PT55}"
                         upTileID="{TileID.BTN_INCREMENT}"/>

    <tile:FadeTileButton id="decrementButton"
                         left="{Values.PT87}"
                         upTileID="{TileID.BTN_DROPDOWN}"/>

</s:SparkSkin>
