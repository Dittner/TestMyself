<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
             alpha.disabledStates=".5">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.CheckBox")]
        ]]>
	</fx:Metadata>

    <fx:Script>
		<![CDATA[
        import de.dittner.testmyself.ui.common.utils.AppColors;
        import de.dittner.testmyself.ui.common.utils.FontName;

        private static const focusExclusions:Array = ["labelDisplay"];
        override public function get focusSkinExclusions():Array { return focusExclusions;}
        ]]>
	</fx:Script>

    <s:states>
        <s:State name="up"/>
        <s:State name="over" stateGroups="overStates"/>
        <s:State name="down" stateGroups="downStates"/>
        <s:State name="disabled" stateGroups="disabledStates"/>
        <s:State name="upAndSelected" stateGroups="selectedStates"/>
        <s:State name="overAndSelected" stateGroups="overStates, selectedStates"/>
        <s:State name="downAndSelected" stateGroups="downStates, selectedStates"/>
        <s:State name="disabledAndSelected" stateGroups="disabledStates, selectedStates"/>
    </s:states>

    <s:Group bottom="0" width="23" height="23">

        <s:Rect left="0" right="0" top="0" bottom="0">
            <s:fill>
                <s:SolidColor color="{AppColors.INPUT_BORDER}" alpha=".2" alpha.selectedStates="1"/>
            </s:fill>
            <s:stroke>
                <s:SolidColorStroke color="{AppColors.INPUT_BORDER}"/>
            </s:stroke>
        </s:Rect>

        <!-- checkmark -->
        <s:Path includeIn="selectedStates" id="check" itemCreationPolicy="immediate"
                width="18" height="18"
                verticalCenter="0" horizontalCenter="0"
                data="M 0 4.969 L 1.5 3.469 L 3.75 5.719 L 8.188 0 L 9.781 1.406 L 3.813 9.094 L 0 4.969 Z">
            <s:fill>
                <s:SolidColor color="#ffFFff"/>
            </s:fill>
        </s:Path>
    </s:Group>

    <s:Label id="labelDisplay"
             left="28" right="0" verticalCenter="1"
             fontFamily="{FontName.MYRIAD}"
             fontStyle="italic"
             fontSize="20"
             color="{AppColors.TEXT_DARK}"
             maxDisplayedLines="1"/>

</s:SparkSkin>
