<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark">
    <fx:Script><![CDATA[
        import dittner.testmyself.model.vo.DataBaseInfoVo;
        import dittner.testmyself.view.common.utils.FontName;

        //--------------------------------------
        //  info
        //--------------------------------------
        private var _info:DataBaseInfoVo;
        [Bindable("infoChanged")]
        public function get info():DataBaseInfoVo {return _info;}
        public function set info(value:DataBaseInfoVo):void {
            if (_info != value) {
                _info = value;
                invalidateProperties()
                dispatchEvent(new Event("infoChanged"));
            }
        }

        override protected function commitProperties():void {
            super.commitProperties();
            var infoText:String;
            if (info) {
                infoText = "— количество слов: " + info.wodsNum;
                infoText += "\n— количество фраз и предложений: " + info.phrasesNum;
                infoText += "\n— количество сильных глаголов: " + info.strongVerbsNum;
                infoText += "\n— количество примеров: " + info.examplesNum;
                infoText += "\n— количество аудиозаписей: " + info.audioRecordsNum;
            }
            else infoText = "";
            infoLbl.text = infoText;
        }

        private function parseData():void {

        }
        ]]></fx:Script>
    <s:Rect width="100%" height="100%">
        <s:fill>
            <s:SolidColor color="#ffFFff"/>
        </s:fill>
    </s:Rect>

    <s:Label fontFamily="{FontName.HELVETICA_NEUE_REGULAR}"
             fontWeight="bold"
             left="20" right="20" top="10"
             fontSize="14" color="#666666"
             text="База данных"/>

    <s:Label id="infoLbl" fontFamily="{FontName.HELVETICA_NEUE_REGULAR}"
             left="20" top="25" right="20"
             fontSize="14" color="#666666"
             verticalAlign="middle"/>

</s:Group>
