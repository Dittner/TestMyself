<?xml version="1.0"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             alpha.disabled="0.5">
    <fx:Metadata>
        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <s:states>
        <s:State name="disabled"/>
        <s:State name="down"/>
        <s:State name="over"/>
        <s:State name="up"/>
    </s:states>

    <fx:Script><![CDATA[
        private function isShowingLabel(label:String):Boolean {
            return label && label.length > 0;
        }
        ]]></fx:Script>


    <s:Group
            visible="{hostComponent.getStyle('icon')}"
            includeInLayout="{hostComponent.getStyle('icon')}"
            top="0" bottom="0"
            width="60">
        <s:BitmapImage id="iconDisplay"
                       horizontalCenter="0"
                       verticalCenter="-5"/>
    </s:Group>

    <s:Label id="labelDisplay"
             left="{iconDisplay.source ? 70 : 10}"
             verticalCenter="0" right="5"
             fontSize="18" fontFamily="HelveticaNeue"
             fontWeight="normal"
             visible="{isShowingLabel(hostComponent.label)}"
             includeInLayout="{isShowingLabel(hostComponent.label)}"/>

</s:SparkSkin>
