        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <s:states>
        <s:State name="disabled"/>
        <s:State name="down"/>
        <s:State name="over"/>
        <s:State name="up"/>
    </s:states>

    <s:BitmapImage
            id="bg"
            source.up="@Embed(source='/assets/voiceRecording/track-background.png',
            scaleGridLeft='8', scaleGridRight='93', scaleGridTop='4', scaleGridBottom='8')"
            source.down="@Embed(source='/assets/voiceRecording/track-background.png',
            scaleGridLeft='8', scaleGridRight='93', scaleGridTop='4', scaleGridBottom='8')"
            source.disabled="@Embed(source='/assets/voiceRecording/track-background.png',
            scaleGridLeft='8', scaleGridRight='93', scaleGridTop='4', scaleGridBottom='8')"
            width="100%"
            height="14"/>

