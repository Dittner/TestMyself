<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:button="dittner.testmyself.deutsch.view.common.button.*"
         xmlns:input="dittner.testmyself.deutsch.view.common.input.*">


    <fx:Script><![CDATA[
        import dittner.testmyself.deutsch.model.AppConfig;
        import dittner.testmyself.deutsch.view.common.utils.AppSizes;

        //--------------------------------------
        //  history
        //--------------------------------------
        private var _history:SearchHistory;
        [Bindable("historyChanged")]
        public function get history():SearchHistory {return _history;}
        public function set history(value:SearchHistory):void {
            if (_history != value) {
                _history = value;
                dispatchEvent(new Event("historyChanged"));
            }
        }
        ]]></fx:Script>

    <s:layout>
        <s:VerticalLayout gap="50" paddingTop="20" paddingRight="20" paddingLeft="20" paddingBottom="20"/>
    </s:layout>

    <s:HGroup width="100%" height="30%">
        <s:VGroup gap="20">
            <s:RadioButton id="titleSearchRadioBtn"
                           groupName="radioBar"
                           width="100%"
                           value="high"
                           selected="true"
                           label="Поиск среди немецких слов и предложений"/>

            <s:RadioButton id="descriptionSearchRadioBtn"
                           groupName="radioBar"
                           width="100%"
                           value="middle"
                           label="Поиск в переводах"/>
        </s:VGroup>

        <s:Spacer width="50%"/>

        <s:VGroup gap="20">
            <s:CheckBox id="wordBox" label="Слова" selected="true"/>
            <s:CheckBox id="wordExamplesBox" label="Примеры слов" selected="true"/>
        </s:VGroup>

        <s:VGroup gap="20">
            <s:CheckBox id="verbBox" label="Неправильные глаголы" selected="true"/>
            <s:CheckBox id="verbExamplesBox" label="Примеры глаголов" selected="true"/>
        </s:VGroup>

        <s:VGroup gap="20">
            <s:CheckBox id="phraseBox" label="Фразы" selected="true"/>
            <s:CheckBox id="lessonBox" label="Задания к урокам" selected="true"/>
        </s:VGroup>

    </s:HGroup>

    <s:HGroup width="100%"
              gap="10" verticalAlign="bottom">

        <input:TextInputForm id="searchInput"
                             top="{AppSizes.EDITOR_FOOTER_HEIGHT + 15}"
                             width="100%"
                             left="15"
                             maxChars="{AppConfig.MAX_THEME_NAME_LENGTH}"
                             title="Введите текст для поиска записей"/>

        <button:BlackButton id="applyBtn"
                            width="200"
                            enabled="{searchInput.text.length > 1}"
                            label="Искать"/>

        <button:GrayButton id="undoBtn"
                           enabled="{history.canUndo}"
                           width="100"
                           label="Назад"/>

        <button:GrayButton id="redoBtn"
                           enabled="{history.canRedo}"
                           width="100"
                           label="Вперёд"/>
    </s:HGroup>


</s:Group>
